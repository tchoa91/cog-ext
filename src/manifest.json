{
  "manifest_version": 3,
  "name": "COGext : System Monitor",
  "version": "2.0",
  "description": "A modern dashboard to monitor CPU, RAM, Battery, and Network. Lightweight, privacy-friendly, with Dark & Light modes.",
  "author": "Fran√ßois Bacconnet",
  "permissions": [
    "system.cpu",
    "system.memory",
    "system.storage",
    "system.display",
    "storage",
    "management"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}

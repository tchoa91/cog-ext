{
  "manifest_version": 3,
  "name": "COGext : System Info Viewer",
  "version": "2.0",
  "description": "Displays OS, CPU, memory, and more system information.",
  "permissions": ["system.cpu", "system.memory", "system.storage", "system.display", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}

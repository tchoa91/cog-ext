{
  "manifest_version": 3,
  "name": "System Info Viewer",
  "version": "1.0",
  "description": "Displays system CPU, memory, and storage information.",
  "permissions": ["system.cpu", "system.memory", "system.storage", "system.display", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
